<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FontSizeVerySmallGreen">
        <item name="android:textSize">3pt</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="FontSizeSmallGreen">
        <item name="android:textSize">5pt</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="FontSizeMediumGreen">
        <item name="android:textSize">8pt</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="FontSizeMediumLargeGreen">
        <item name="android:textSize">11pt</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="FontSizeLargeGreen">
        <item name="android:textSize">14pt</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="FontSizeVerySmallRed">
        <item name="android:textSize">3pt</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="FontSizeSmallRed">
        <item name="android:textSize">5pt</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="FontSizeMediumRed">
        <item name="android:textSize">8pt</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="FontSizeMediumLargeRed">
        <item name="android:textSize">11pt</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="FontSizeLargeRed">
        <item name="android:textSize">14pt</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
</resources>
